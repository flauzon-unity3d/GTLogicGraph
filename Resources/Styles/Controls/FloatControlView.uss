FloatControlView > #floatPanel {
    flex-direction: row;
    flex-grow: 1;
}

FloatControlView > #floatPanel > Label {
    flex-grow: 1;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-left: 8;
    margin-right: 8;
    margin-top: 4;
    margin-bottom: 4;
}

FloatControlView > #floatPanel > TextField {
    margin-left: 8;
    margin-right: 8;
    margin-top: 4;
    margin-bottom: 4;
    align-self: center;
}