
.port {
	position: relative;
	min-height: 24px;
	min-width: 48px;
    height: auto;
	flex-direction: row;
	flex-wrap: wrap;
	flex-shrink: 1;
	flex-grow: 0;
    align-items: center;
	align-content: center;
    padding-left: 4px;
    padding-right: 4px;
    --port-color: rgb(200, 200, 200);
    --disabled-port-color: rgb(70, 70, 70);	
}


.port.input {
    flex-direction: row;
}

.port.output {
    flex-direction: row-reverse;
}

.port > #connector {
    border-color: rgb(70, 70, 70);
    background-color: #212121;
    width: 8px;
    height: 8px;
    border-radius: 8px;
    align-items: center;
    justify-content: center;

    margin-left: 4px;
    margin-right: 4px;
    border-left-width: 1px;
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
}

.port > #connector:hover {
    border-color: #f0f0f0
}

.port > #connector > #cap {
    background-color: #212121;
    width: 4px;
    height: 4px;
    border-radius: 4px;
}

.port > #connector > #cap:disabled {
    opacity: 1.0;
}

.port > #connector > #cap:hover {
    background-color: #f0f0f0;
}

.port > #connector.portHighlight {
    border-color: #f0f0f0;
}

.port > #type {
    color: #c1c1c1;
    font-size: 11px;
    min-width: 20%;	
	flex-grow: 1;
	flex-shrink: 1;
	height: 16px;
    padding-left: 0;
    padding-right: 10px;
    margin-left: 4px;
    margin-right: 4px;
}

.port.input > #type {
    -unity-text-align: middle-left;
}

.port.output > #type {
    -unity-text-align:middle-right;
}


/********************************/
/* Ports colors by types 		*/
/********************************/

.FieldBool {
    --port-color: rgb(100, 0, 0);
}

.FieldFloat {
    --port-color: rgb(100, 100, 200);
}

.FieldQuaternion {
    --port-color: rgb(100, 0, 200);
}

.FieldVector2 {
    --port-color: rgb(100, 0, 200);
}

.FieldVector3 {
    --port-color: rgb(100, 0, 200);
}

.FieldVector4 {
    --port-color: rgb(100, 0, 200);
}

